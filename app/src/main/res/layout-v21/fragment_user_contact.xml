<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/root_container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.whattabiz.bibliosbookpoint.ui.UserContactFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/subhead_text"
        android:theme="@style/TextInputLayoutTextAppearance"
        app:errorTextAppearance="@style/TextInputErrorAppearance"
        app:hintTextAppearance="@style/TextInputHintAppearance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textWebEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/white"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/retype_password"
        android:theme="@style/TextInputLayoutTextAppearance"
        app:errorTextAppearance="@style/TextInputErrorAppearance"
        app:hintTextAppearance="@style/TextInputHintAppearance"
        app:layout_constraintLeft_toLeftOf="@+id/password_retype_text_input"
        app:layout_constraintRight_toRightOf="@+id/password_retype_text_input"
        app:layout_constraintTop_toBottomOf="@+id/password_retype_text_input"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword|textWebPassword"
            android:maxLines="1"
            android:textColor="@android:color/white"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_retype_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="@string/subhead_password_text"
        android:theme="@style/TextInputLayoutTextAppearance"
        app:errorTextAppearance="@style/TextInputErrorAppearance"
        app:hintTextAppearance="@style/TextInputHintAppearance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text_input"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword|textWebPassword"
            android:maxLines="1"
            android:textColor="@android:color/white"
            />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
