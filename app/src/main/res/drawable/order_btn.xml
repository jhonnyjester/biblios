<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="@color/orderBtnPressed" android:startColor="@color/orderButton" />

            <corners android:radius="2dp" />

            <stroke android:width="1dp" android:color="@color/orderButton" />

            <solid android:color="@color/orderButton" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#f5f5f5" android:startColor="#d7ccc8" />

            <corners android:radius="2dp" />

            <stroke android:width="1dp" android:color="@color/orderButton" />

            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>
