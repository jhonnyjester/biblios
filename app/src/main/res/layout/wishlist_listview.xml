<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/BibliosTheme.NoActionBar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="1dp"
        app:cardMaxElevation="4dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/book_img_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:src="@drawable/images"/>

            <TextView
                android:id="@+id/bname_tv_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/book_img_view"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/book_img_view"
                android:maxLines="3"
                android:text="Book Name Here "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bcost_tv_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bname_tv_wish"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/book_img_view"
                android:text="Rs. 240.00/-"
                android:textColor="#1D60AB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/cwishlist_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/order_btn"
                    android:fontFamily="sans-serif-lite"
                    android:text="ADD To cart"
                    android:textColor="@drawable/signbtntxt"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/wishlist_remove_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/remove_btn"
                    android:fontFamily="sans-serif-lite"
                    android:text="Remove"
                    android:textColor="@drawable/signbtntxt"
                    android:textSize="15sp"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>