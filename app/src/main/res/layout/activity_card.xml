<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:background="@drawable/bg"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#e6e6e6"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:orientation="horizontal"
        android:paddingEnd="24dp"
        android:paddingStart="24dp">

        <ImageView
            android:id="@+id/book_image_card"
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:padding="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/book_name_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/book_image_card"
            android:maxLines="2"
            android:textColor="@color/text_default_color"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_card_sprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_name_card"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/book_image_card"
            android:textColor="@color/text_default_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_card_mprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_card_sprice"
            android:layout_toRightOf="@id/book_image_card"
            android:textSize="16sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>